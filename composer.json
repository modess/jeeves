{
    "name": "modess/jeeves",
    "type": "library",
    "description": "Tool for settings up Jenkins CI for your PHP project",
    "license": "MIT",
    "keywords": ["jenkins","ci","continuous integration"],
    "homepage": "https://github.com/modess/jeeves",
    "authors": [
        {
            "name": "Niklas Modess",
            "email": "niklas@modess.io",
            "homepage": "https://modess.io"
        }
    ],
    "require": {
        "php": "~7.0",
        "symfony/console": "~2.7|~3.0|~4.0",
        "league/flysystem": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Jeeves\\": "src/"
        }
    },
    "suggest": {
        "phpunit/phpunit": "Run unit tests and generate code coverage",
        "squizlabs/php_codesniffer": "Checking that code styles follows a standard",
        "phpmd/phpmd": "Check code complexity",
        "sebastian/phpcpd": "Check for code duplication",
        "jakub-onderka/php-parallel-lint": "Fast PHP linting in parallel"
    }
}
